<config>
    <modules>
        <Setcom_SID>
            <version>1.0.1</version>
        </Setcom_SID>
    </modules>
 
    <global>
        <blocks>
            <sid>
                <class>Setcom_SID_Block</class>
            </sid>
        </blocks>
        <models>
            <sid>
                <class>Setcom_SID_Model</class>
            </sid>
        </models>
        <helpers>
            <sid>
                <class>Setcom_SID_Helper</class>
            </sid>
        </helpers>
        <resources>
            <sid_setup>
                <setup>
                    <module>Setcom_SID</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </sid_setup>
            <sid_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </sid_write>
            <sid_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </sid_read>
        </resources>
    </global>
	
    <frontend>
        <routers>
            <sid> 
                <use>standard</use>
                <args>
                    <module>Setcom_SID</module>
                    <frontName>sid</frontName>
                </args>
            </sid>
        </routers>
		<layout>
            <updates>
               <sid>
                   <file>setcom_sid.xml</file>   
				   </sid>
            </updates>
      </layout>
    </frontend>
    
    <default>
        <payment>
            <sid>
                <active>0</active>
				<order_status_completed>processing</order_status_completed>
				<display_sid_info>0</display_sid_info>
                <display_additional_info_href>0</display_additional_info_href>
                <additional_info_href>https://www.sidpayment.com</additional_info_href>
                <model>sid/paymentMethod</model>
                <title>SID Instant EFT</title>
                <allowspecific>0</allowspecific>
                <currency>ZAR</currency>
            </sid>
        </payment>
    </default>
</config>